{
  "name": "ideiaflow",
  "description": "IdeiaFlow - Plataforma para organizar ideias e projetos",
  "type": "app",
  "framework": "react",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "NODE_ENV": "production"
  },
  "domains": [
    {
      "domain": "ideiaflow.seu-dominio.com",
      "type": "primary"
    }
  ],
  "resources": {
    "cpu": "0.5",
    "memory": "512Mi"
  },
  "scaling": {
    "minReplicas": 1,
    "maxReplicas": 3
  },
  "healthCheck": {
    "path": "/health",
    "port": 80
  }
}
